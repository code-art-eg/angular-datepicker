{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDirs": [
      "./",
      "../src/"
    ],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "inlineSourceMap": true,
    "lib": [
      "es5",
      "dom"
    ],
    "target": "es5",
    "skipLibCheck": true,
    "types": [
      "globalize",
      "node",
      "chai",
      "mocha",
      "chai-datetime"
    ]
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ]
}